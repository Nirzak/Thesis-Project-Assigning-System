<%- include('dbwrapper.ejs') %>
<%- include('partials/messages.ejs') %>
<div id="page-wrapper">
  <div class="container-fluid">
      <!-- Page Heading -->
      <div class="row" id="main" >
          <div class="col-sm-12 col-md-12 well" id="content">
            <form action="/application" method="POST" class="p-5 bg-white">
              <div class="row form-group">
              <h2 class="mb-5 text-black">Thesis-Project Proposal Form</h2>
              </div>
              
              <div class="row form-group">
                <div class="col-md-10">
                  <label class="text-black" for="title">Title</label> 
                  <input type="text" id="title" name="title" placeholder="Your Project/Thesis Title" class="form-control"
                  value="<%= typeof title != 'undefined' ? title : '' %>">
                </div>
              </div>
             
              <div class="row form-group">
                
                <div class="col-md-10">
                  <label class="text-black" for="field">Field (Separated by comma)</label> 
                  <input type="text" id="field" name="field" placeholder="Provide your field of study eg. NLP, Machine Learning, Java etc." class="form-control"
                  value="<%= typeof field != 'undefined' ? field : '' %>">
                </div>
              </div>
    
            <div class="row form-group">
              <div class="col-md-10">
                <label class="text-black" for="description">Description</label> 
                <textarea type="text" id="description" name="description" placeholder="Describe Your Project/Thesis Proposal Here" rows="8" cols="10" class="form-control"
                value="<%= typeof description != 'undefined' ? description : '' %>"></textarea>
              </div>
            </div>
    
          <div class="row form-group">
            <div class="col-md-10">
              <label class="text-black" for="choice">Supervisor Choice List</label> 
              <textarea type="text" id="choice" name="choice"
              placeholder="Provide your Supervisor Choice List in List format. For an Example 1. First Supervisor, 2. 2nd Supervisor" rows="7" cols="10" class="form-control"
              value="<%= typeof choice != 'undefined' ? choice : '' %>"></textarea>
            </div>
          </div>
    
            <div class="row form-group">
                <div class="col-md-10">
                  <label class="text-black" for="cgpa">Average CGPA (in scale of 4 on the Selected Subjects) </label> 
                  <input type="text" id="cgpa" name="cgpa" class="form-control"
                  value="<%= typeof cgpa != 'undefined' ? cgpa : '' %>">
                </div>
            </div>
    
            <div class="row form-group">
                <div class="col-md-12">
                  <input type="submit" value="Submit" class="btn btn-primary py-2 px-4 text-white">
                </div>
            </div>
    
            </form>
      </div>
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
</div><!-- /#wrapper -->
</body>
</html>